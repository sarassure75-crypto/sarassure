# htaccess file for Vite SPA on Hostinger
# Save as: .htaccess in public_html/ (root folder)

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Don't rewrite files/directories that actually exist
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rewrite all other requests to index.html
  # This allows React Router to handle all routes
  RewriteRule ^ index.html [QSA,L]
</IfModule>

# Optional: Force HTTPS (if not already configured)
# Uncomment lines below if needed:
# <IfModule mod_rewrite.c>
#   RewriteCond %{HTTPS} off
#   RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

