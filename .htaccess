<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Forcer la route /wallpapers (et /wallpapers/) à charger l'application React
  # même si un dossier physique /wallpapers existe (évite 403 directory listing).
  RewriteRule ^wallpapers/?$ index.html [L]

  # SPA fallback pour toutes les autres routes non-fichiers / non-dossiers
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  Header set X-Powered-By "Hostinger Horizons"
  Header set Cache-Control "public, s-maxage=604800, max-age=0"
  
  <If "%{REQUEST_URI} =~ m#^/assets/.*$#">
    Header set Cache-Control "public, max-age=604800"
  </If>
</IfModule>
